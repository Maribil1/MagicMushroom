@model MagicMushroom.Models.Character

@{
    ViewData["Title"] = "Character creator";
}

<h2>Who are you?</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
         
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>           
          
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mushroom" >Choose your magic mushroom</label>
                <select id="dropdownMenu"  class="dropdown-content">
                    <option value="option1">Psilocybe azurescens</option>
                    <option value="option2">Psilocybe cubensis</option>
                    <option value="option3">Gymnopilus validipes</option>
                    <option value="option4">Panaeolus africanus</option>
                    <option value="option4">Inocybe corydalina</option>
                    <option value="option4">Amanita muscaria</option>
                </select>
            </div>

            <div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                  
            </div>
            
        </form>
    
</div> 
